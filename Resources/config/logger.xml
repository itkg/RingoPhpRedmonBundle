<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ringo_php_redmon.instance_logger" class="Ringo\Bundle\PhpRedmonBundle\Logger\InstanceLogger" public="true">
            <argument type="service" id="ringo_php_redmon.instance_manager" />
            <argument type="service" id="ringo_php_redmon.instance_worker" />
            <argument>%ringo_php_redmon.log.days%</argument>
        </service>
    </services>
</container>
