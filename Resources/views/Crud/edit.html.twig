{% extends 'RingoPhpRedmonBundle::crud.html.twig' %}

{% block main %}
    
        <h2>Update a Redis Instance</h2>
      
        <form action="{{ path('ringo_php_redmon_instance_update', {'id': id}) }}" method="post" {{ form_enctype(form) }}>
        {{ form_row(form.id) }}
        {{ form_row(form._token) }}
         <div class="field">
            {{ form_errors(form.name) }}
            {{ form_label(form.name) }}    
            {{ form_widget(form.name) }}
        </div>    
        <div class="field">
            {{ form_errors(form.host) }}
            {{ form_label(form.host) }}    
            {{ form_widget(form.host) }}
        </div>
        <div class="field">
            {{ form_errors(form.port) }}
            {{ form_label(form.port) }}
            {{ form_widget(form.port) }}
        </div>
        <input class="btn" type="submit" value="Submit" />
    </form>
        
    
{% endblock %} 
        
{% block widget %}
    <div class="span3 pull-right">
        <div class="well well-large add_link">
            <a class="black" href="{{ path('ringo_php_redmon_instance_delete', {'id': id}) }}">
                <img class="pull-left" src="{{ asset('/bundles/ringophpredmon/images/del.png') }}" width="20"/>
                <strong>Delete this instance</strong></a>
        </div>
    </div>
{% endblock %}

