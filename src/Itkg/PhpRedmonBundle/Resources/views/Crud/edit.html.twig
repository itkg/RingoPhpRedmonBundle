{% extends 'ItkgPhpRedmonBundle::base.html.twig' %}

{% block main %}
<div class="row">
    <div class="span9">
        <h2>Modifier une instance Redis</h2>
        <form action="{{ path('itkg_php_redmon_instance_update', {'id': id}) }}" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}

            <input type="submit" value="Valider" />
        </form>
    </div>
    <div class="span3">
      <div class="well well-large add_link">
          <a class="black" href="{{ path('itkg_php_redmon_instance_delete', {'id': id}) }}">
              <img class="pull-left" src="{{ asset('/bundles/itkgphpredmon/images/del.png') }}" width="20"/>
              <strong>Supprimer cette instance</strong></a>
      </div>
</div>
{% endblock %}    

