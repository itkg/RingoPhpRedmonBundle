<!DOCTYPE html>
<html>
  <head>
    <title>Php Redmon</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/bundles/itkgphpredmon/css/bootstrap.min.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('/bundles/itkgphpredmon/css/bootstrap-responsive.css') }}" rel="stylesheet">    
    <link rel="stylesheet" href="{{ asset('/bundles/itkgphpredmon/css/style.css') }}" rel="stylesheet">


{% endblock %}
      </head>
 
    <body>
    {% block nav %}
        {% render "ItkgPhpRedmonBundle:Main:navigation" %}
    {% endblock %}
    <br/><br/><br/><br/>
    <div class="container-fluid">
        <div class="row">
            {% include 'ItkgPhpRedmonBundle:Main:message.html.twig' %}
            {% block widget %}
                <div class="span5 pull-right">
                    <div class="well well-large add_link">
                        <a class="black" href="{{ path('itkg_php_redmon_instance_new') }}"><img class="pull-left" src="{{ asset('/bundles/itkgphpredmon/images/add.png') }}" width="20"/><strong>Ajouter une instance</strong></a>
                    </div>
                    <div class="accordion" id="accordion2">
                        {% render "ItkgPhpRedmonBundle:Main:infos" %}
                        {% render "ItkgPhpRedmonBundle:Main:administration" %}
                    </div>
                </div>
            {% endblock %}
            <div class="span12 pull-right">
                {% block main %}

                {% endblock%}   
            </div>

        </div>
    </div>
{% block javascript %}
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="{{ asset('/bundles/itkgphpredmon/js/bootstrap.min.js ') }}"></script>
    <script src="{{ asset('/bundles/itkgphpredmon/js/phpredmon.js ') }}"></script>
{% endblock %}
  </body>
</html>